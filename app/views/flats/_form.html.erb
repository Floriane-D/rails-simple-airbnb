<%= simple_form_for(@flat) do |f| %>
  <% if @flat.errors.any? %>
    <div class="errors-container">
      <ul>
        <% @flat.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_for(@flat) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :address %>
    <%= f.text_field :address %>
    <%= f.label :description %>
    <%= f.text_field :description %>
    <%= f.label :price_per_night %>
    <%= f.number_field :price_per_night %>
    <%= f.label :number_of_guests %>
    <%= f.number_field :number_of_guests %>
    <%= f.submit %>
  <% end %>

<% end %>
